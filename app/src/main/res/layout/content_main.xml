<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colour_light_transparent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_para_1"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:textSize="16dp"
            android:textColor="@color/colorBlue"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:textColor="@color/colorBlue"
            android:text="@string/intro_para_2"/>

        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorMaroon"
            android:textSize="16dp"
            android:padding="8dp"
            android:text="@string/intro_para_3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMaroon"
            android:padding="8dp"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/intro_para_4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorMaroon"
            android:textSize="16dp"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/intro_para_5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorBlue"
            android:padding="8dp"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/intro_para_6"/>

        <TextView
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorMaroon"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/intro_para_7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorMaroon"
            android:padding="8dp"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/intro_para_8"/>

    </LinearLayout>

</ScrollView>